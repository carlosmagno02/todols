@ViewBag.Mensagem

<form action="/Usuario/Cadastrar" method="POST">
    <label>
        Nome
        <input type="text" class="borda-amarela" name="nome">
    </label><br>

    <label>
        Email
        <input type="email" name="email">
    </label><br>

    <label>
        Senha
        <input type="password" name="senha">
    </label><br>
    <label>
        Tipo de cadastro
        <select>
            <option>--Tipo de Cadastro--</option>
            <option>Usuario</option>
            <option>Administrador</option>
        </select>
    </label><br>

    <input type="submit" value="Enviar">

</form>